<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".ReportsFragment">

        <!-- Título -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relatórios"
            android:textColor="?attr/colorOnSurface"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Card Vendas de Hoje -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_today_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rounded_icon_background"
                        android:backgroundTint="@color/green_500"
                        android:padding="4dp"
                        android:src="@drawable/ic_reports"
                        app:tint="?attr/fabIconColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="VENDAS DE HOJE"
                        android:textColor="@color/gray_700"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_today_sales_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="R$ 0.00" />

                <TextView
                    android:id="@+id/text_today_sales_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    tools:text="0 venda(s)" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Vendas do Mês -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_month_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/card_today_sales"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rounded_icon_background"
                        android:backgroundTint="@color/black"
                        android:padding="6dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="VENDAS DO MÊS"
                        android:textColor="@color/gray_700"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_month_sales_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="R$ 0.00" />

                <TextView
                    android:id="@+id/text_month_sales_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    tools:text="0 venda(s)" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cards de Ticket Médio -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            app:layout_constraintTop_toBottomOf="@id/card_month_sales">

            <!-- Ticket Médio Dia -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TICKET MÉDIO DIA"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_avg_ticket_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="R$ 0.00" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ticket Médio Mês -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TICKET MÉDIO MÊS"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_avg_ticket_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="R$ 0.00" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
