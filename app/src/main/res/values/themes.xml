<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base para Modo Claro -->
    <style name="Theme.MeuCaixa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/gray_600</item>

        <!-- Atributos Customizados -->
        <item name="fabIconColor">@color/white</item>
        <item name="editTextBackground">@drawable/edit_text_background</item>
        <item name="quantityButtonBackground">@drawable/quantity_button_background</item>
        <item name="appLogo">@drawable/ic_logo_app</item>
        <item name="separatorColor">@color/gray_300</item>

        <!-- Barra de Status -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Estilo do FAB (RESTAURADO) -->
    <style name="MyFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/green_500</item>
        <item name="tint">?attr/fabIconColor</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Estilo: Botão Outlined Arredondado (RESTAURADO) -->
    <style name="Widget.App.Button.OutlinedButton.Rounded" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button.Rounded</item>
    </style>

    <style name="ShapeAppearance.App.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ESTILOS PARA A BARRA DE NAVEGAÇÃO -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color_selector</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green_100</item>
    </style>

</resources>
